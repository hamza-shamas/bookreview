<div class="container">
  <%= link_to "Add Book", new_book_path, class:"btn btn-primary book-btn" %>
</div>
<div class="container">
  <table class="table table-striped table-hover table-bordered tbl-review">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Ttile</th>
        <th scope="col">Author</th>
        <th scope="col">Options</th>
      </tr>
      <tbody>
        <% i=0 %>
        <% @books.each do |book| %>
          <tr>
            <td><%= i=i+1 %></td>
            <td><%= book.name %></td>
            <td><%= book.author %></td>
            <td><%= link_to "Read Reviews",book_reviews_path(book) , class: "btn btn-info"%>
                <%= link_to "Add Review", new_book_review_path(book), class: "btn btn-primary" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    <thead>
    </table>
</div>
